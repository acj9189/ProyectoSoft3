@model GisDes.Models.CrearSemillero

@{
    ViewBag.Title = "Crear Semilleros de investigacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear Semilleros de investigacion</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Crear semillero de investigacion</h4>
            <hr />
            <div class="form-group">
                <label class="col-md-2" id="lbNombre">Nombre del semillero:</label>
                <input type="text" class="form-control col-md-10" id="nombre" value="" placeholder="Nombre del semillero" />
            </div>
            <div class="form-group form-inline ">
                <div class="form-group col-md-6">
                    <label class="col-md-4">Coordinador:</label>
                    <select id="coordinador" class="form-control">
                        <option></option>
                        @foreach (GisDes.Models.Integrante integrante in Model.listaIntegrantesDocentes)
                        {
                            <option>
                                @integrante.TipoIntegrante1.Nombre, @integrante.Nombre @integrante.Apellidos
                            </option>
                        }
                    </select>
                </div>

                <div class="form-group col-md-6">
                    <label class="col-md-4">Linea de investigacion:</label>
                    <select id="lineaInvestigacion" class="form-control">
                        <option></option>
                        @foreach (GisDes.Models.LineaInvestigacion linea in Model.listaLineasInvestigacion)
                        {
                            <option>
                                @linea.Nombre - @linea.GrupoInvestigacion1.Nombre
                            </option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2">Fecha de creacion:</label>
                <input type="date" class="form-control col-md-12" id="fechaCreacion" value="" />
            </div>
            <div class="form-group">
                <label class="col-md-2">Enlace web del semillero:</label>
                <input type="url" class="form-control col-md-12" id="enlace" value="" placeholder="www.ejemplo.com/semillero" />
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <label class="col-md-12">Objetivo general:</label>
                    <textarea class="form-control" id="objGeneral" rows="5"></textarea>
                </div>
                <div class="col-md-4">
                    <label class="col-md-12">Objetivos especificos:</label>
                    <textarea class="form-control" id="objEspecificos" rows="5"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-5">
                    <label class="col-md-12">Tags:</label>
                    <input type="text" class="form-control " id="tags" value="" placeholder="cultura, sociedad, entre otros..." />
                </div>
            </div>

            <div class="form-group">
                <div class="form-inline col-md-2">
                    <input type="submit" value="Crear" class="btn btn-default" />
                    <input type="reset" value="Limpiar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        
    </div>
</body>
</html>
